@model Producto.Models.ViewModels.ProductSellVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-success" asp-controller="Home" asp-action="Index">Ir a inicio</a>

<form method="post" >
    <h1>Crear Venta</h1>
    <div class="row">
        <label class="form-label">Seleccione cliente para asociar la Venta</label>
        <div class="col-4">           
            @Html.DropDownListFor(c => c.Sale.CustomerId, Model.ClientesLista,
            new { @class = "form-select"})
            <span asp-validation-for="Sale.CustomerId" class="text-danger"></span>        
        </div>
        <div class="col-3">
            <button class="btn btn-primary" type="submit" asp-controller="Sells" asp-action="CreateSale">Crear Venta</button>
        </div>
     </div>    
</form>
<br />
<div class="row">
    <h3 class="text-center">Listado de Ordenes de Venta creadas</h3>
    <div class="col-sm-12 table-responsive">
        <table id="tblDatos" class="table" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>Id Venta</th>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/IndexVentas.js"></script>
}