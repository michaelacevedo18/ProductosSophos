@model Producto.Models.Product
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="row p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    @if (Model.Id != 0)
    {
        <h4>Editar Producto</h4>
    }
    else{
        <h4>Crear Producto</h4>
    }
    <div class="col-8 pt-4">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Price"></label>
            </div>
            <div class="col-8">
                <input type="number" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8 offset-4">
                <br />
                @if (Model.Id != 0)
                {
                    <a class="btn btn-success" asp-controller="Products" asp-action="Index">Regresar</a>
                    <button class="btn btn-primary" type="submit" asp-controller="Products" asp-action="Upsert">Actualizar</button>
                }
                else
                {
                    <a class="btn btn-success" asp-controller="Products" asp-action="Index">Regresar</a>
                    <button class="btn btn-primary" type="submit" asp-controller="Products" asp-action="Upsert">Crear</button>
                }


            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

